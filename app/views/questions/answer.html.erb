<div class="question mb-2">
    <div class="pt-2 pb-1 pl-3">
        <p><%= @question %></p>
    </div>
    <div class="pt-1 pb-2 pl-3">
        <p>- You</p>
    </div>
</div>


<div class="answer mt-2">
    <div class="pt-2 pb-1 pl-3">
        <p><%= @answer %></p>
    </div>
    <div class="pt-1 pb-2 pl-3">
        <p>- Your coach</p>
    </div>
</div>


<div class="row d-flex justify-content-center mt-3">
    <%= link_to "Ask another question", ask_path %>
</div>